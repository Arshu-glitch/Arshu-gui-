--// Advanced Sectioned GUI Menu Template
--// Works with Studio & most Executors

local parentGui = (gethui and gethui()) or game:GetService("CoreGui")
local setClipboard = setclipboard or toclipboard -- Clipboard function

-- ScreenGui
local screenGui = Instance.new("ScreenGui")
screenGui.Name = "SectionedMenu"
screenGui.Parent = parentGui
screenGui.ResetOnSpawn = false

-- Draggable Arrow Button
local arrowButton = Instance.new("TextButton")
arrowButton.Size = UDim2.new(0, 40, 0, 40)
arrowButton.Position = UDim2.new(0, 10, 0.5, -20)
arrowButton.Text = "→"
arrowButton.BackgroundColor3 = Color3.fromRGB(35, 35, 35)
arrowButton.TextColor3 = Color3.fromRGB(255, 255, 255)
arrowButton.Font = Enum.Font.SourceSansBold
arrowButton.TextSize = 20
arrowButton.Parent = screenGui
arrowButton.Active = true
arrowButton.Draggable = true
Instance.new("UICorner", arrowButton)

-- Main Frame
local mainFrame = Instance.new("Frame")
mainFrame.Size = UDim2.new(0, 300, 0, 350)
mainFrame.Position = UDim2.new(0, 60, 0.5, -175)
mainFrame.BackgroundColor3 = Color3.fromRGB(25, 25, 25)
mainFrame.Visible = false
mainFrame.Parent = screenGui
Instance.new("UICorner", mainFrame)

-- Title
local titleLabel = Instance.new("TextLabel")
titleLabel.Size = UDim2.new(1, 0, 0, 40)
titleLabel.BackgroundColor3 = Color3.fromRGB(40, 40, 40)
titleLabel.TextColor3 = Color3.fromRGB(255, 255, 255)
titleLabel.Font = Enum.Font.SourceSansBold
titleLabel.TextSize = 20
titleLabel.Text = "Custom Cheat Menu"
titleLabel.Parent = mainFrame
Instance.new("UICorner", titleLabel)

-- Tabs Holder
local tabsFrame = Instance.new("Frame")
tabsFrame.Size = UDim2.new(1, 0, 0, 35)
tabsFrame.Position = UDim2.new(0, 0, 0, 40)
tabsFrame.BackgroundColor3 = Color3.fromRGB(30, 30, 30)
tabsFrame.Parent = mainFrame

-- Content Frame
local contentFrame = Instance.new("Frame")
contentFrame.Size = UDim2.new(1, 0, 1, -75)
contentFrame.Position = UDim2.new(0, 0, 0, 75)
contentFrame.BackgroundColor3 = Color3.fromRGB(20, 20, 20)
contentFrame.Parent = mainFrame
Instance.new("UICorner", contentFrame)

-- Function to switch tabs
local currentTab
local function switchTab(tabName)
    for _, child in ipairs(contentFrame:GetChildren()) do
        if child:IsA("Frame") then
            child.Visible = (child.Name == tabName)
        end
    end
end

-- Function to create tab buttons
local function createTabButton(name, order)
    local btn = Instance.new("TextButton")
    btn.Size = UDim2.new(0.33, 0, 1, 0)
    btn.Position = UDim2.new((order-1) * 0.33, 0, 0, 0)
    btn.BackgroundColor3 = Color3.fromRGB(50, 50, 50)
    btn.TextColor3 = Color3.fromRGB(255, 255, 255)
    btn.Font = Enum.Font.SourceSans
    btn.TextSize = 16
    btn.Text = name
    btn.Parent = tabsFrame
    Instance.new("UICorner", btn)

    btn.MouseButton1Click:Connect(function()
        switchTab(name)
    end)
end

-- INTRODUCTION TAB
local introFrame = Instance.new("Frame")
introFrame.Size = UDim2.new(1, 0, 1, 0)
introFrame.BackgroundTransparency = 1
introFrame.Name = "Introduction"
introFrame.Parent = contentFrame

local introLabel = Instance.new("TextLabel")
introLabel.Size = UDim2.new(1, -20, 0, 50)
introLabel.Position = UDim2.new(0, 10, 0, 10)
introLabel.BackgroundTransparency = 1
introLabel.TextColor3 = Color3.fromRGB(255, 255, 255)
introLabel.Font = Enum.Font.SourceSans
introLabel.TextSize = 18
introLabel.TextWrapped = true
introLabel.Text = "yo im arshu, js a testing gui menu for universal op, any bug contact me on discrod or telegram or inatagram, link on about "
introLabel.Parent = introFrame

-- CHEATS TAB
local cheatsFrame = Instance.new("ScrollingFrame")
cheatsFrame.Size = UDim2.new(1, 0, 1, 0)
cheatsFrame.CanvasSize = UDim2.new(0, 0, 0, 300)
cheatsFrame.ScrollBarThickness = 5
cheatsFrame.Name = "Cheats"
cheatsFrame.Parent = contentFrame

local function createCheatButton(name, scriptCode)
    local btn = Instance.new("TextButton")
    btn.Size = UDim2.new(1, -20, 0, 35)
    btn.Position = UDim2.new(0, 10, 0, (#cheatsFrame:GetChildren() - 1) * 40)
    btn.BackgroundColor3 = Color3.fromRGB(50, 50, 50)
    btn.TextColor3 = Color3.fromRGB(255, 255, 255)
    btn.Font = Enum.Font.SourceSans
    btn.TextSize = 18
    btn.Text = name
    btn.Parent = cheatsFrame
    Instance.new("UICorner", btn)

    btn.MouseButton1Click:Connect(function()
        local success, err = pcall(function()
            loadstring(scriptCode)()
        end)
        if not success then
            warn("Error running " .. name .. ": " .. err)
        end
    end)
end

createCheatButton("ESP", [[
loadstring(game:HttpGet("https://raw.githubusercontent.com/Mautiku/ehh/main/Hight%20light%20esp%20and%20more.txt",true))()
]])

createCheatButton("Aimlock", [[
loadstring(game:HttpGet("https://raw.githubusercontent.com/yzeedw/Mortalv2-main/main/UNIVERSAL%20AIMBOT%20V2"))()
]])

createCheatButton("Dash", [[
loadstring(game:HttpGet('https://raw.githubusercontent.com/Mautiku/ehh/main/FE%20DASH.txt'))()
]])

createCheatButton("Invisible Tool", [[
loadstring(game:HttpGet("https://raw.githubusercontent.com/Mautiku/ehh/main/invisible%20tool.txt",true))()
]])

-- ABOUT TAB
local aboutFrame = Instance.new("Frame")
aboutFrame.Size = UDim2.new(1, 0, 1, 0)
aboutFrame.BackgroundTransparency = 1
aboutFrame.Name = "About"
aboutFrame.Parent = contentFrame

local function createLinkButton(name, link)
    local btn = Instance.new("TextButton")
    btn.Size = UDim2.new(1, -20, 0, 35)
    btn.Position = UDim2.new(0, 10, 0, (#aboutFrame:GetChildren()) * 40)
    btn.BackgroundColor3 = Color3.fromRGB(60, 60, 60)
    btn.TextColor3 = Color3.fromRGB(255, 255, 255)
    btn.Font = Enum.Font.SourceSans
    btn.TextSize = 18
    btn.Text = name
    btn.Parent = aboutFrame
    Instance.new("UICorner", btn)

    btn.MouseButton1Click:Connect(function()
        if setClipboard then
            setClipboard(link)
            print(name .. " link copied: " .. link)
        else
            warn("Clipboard function not available in this executor.")
        end
    end)
end

createLinkButton("Discord", "coming soon")
createLinkButton("WhatsApp", "coming soon")
createLinkButton("Instagram", "coming soon")

-- Create Tabs
createTabButton("Introduction", 1)
createTabButton("Cheats", 2)
createTabButton("About", 3)

-- Start on Introduction tab
switchTab("Introduction")

-- Toggle menu visibility
arrowButton.MouseButton1Click:Connect(function()
    mainFrame.Visible = not mainFrame.Visible
    arrowButton.Text = mainFrame.Visible and "←" or "→"
end)
