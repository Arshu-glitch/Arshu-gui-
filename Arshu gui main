--// Arshu GUI Menu (Full Fixed Version)

local parentGui = (gethui and gethui()) or game:GetService("CoreGui")

-- ScreenGui
local screenGui = Instance.new("ScreenGui")
screenGui.Name = "ArshuMenu"
screenGui.Parent = parentGui
screenGui.ResetOnSpawn = false

-- Arrow Button
local arrowButton = Instance.new("TextButton")
arrowButton.Size = UDim2.new(0, 40, 0, 40)
arrowButton.Position = UDim2.new(0, 10, 0.5, -20)
arrowButton.Text = "→"
arrowButton.BackgroundColor3 = Color3.fromRGB(35, 35, 35)
arrowButton.TextColor3 = Color3.fromRGB(255, 255, 255)
arrowButton.Font = Enum.Font.SourceSansBold
arrowButton.TextSize = 20
arrowButton.Parent = screenGui
arrowButton.Active = true
arrowButton.Draggable = true
Instance.new("UICorner", arrowButton)

-- Main Frame
local mainFrame = Instance.new("Frame")
mainFrame.Size = UDim2.new(0, 300, 0, 350)
mainFrame.Position = UDim2.new(0, 60, 0.5, -175)
mainFrame.BackgroundColor3 = Color3.fromRGB(25, 25, 25)
mainFrame.Visible = false
mainFrame.Parent = screenGui
Instance.new("UICorner", mainFrame)

-- Title
local titleLabel = Instance.new("TextLabel")
titleLabel.Size = UDim2.new(1, 0, 0, 40)
titleLabel.BackgroundColor3 = Color3.fromRGB(40, 40, 40)
titleLabel.TextColor3 = Color3.fromRGB(255, 255, 255)
titleLabel.Font = Enum.Font.SourceSansBold
titleLabel.TextSize = 20
titleLabel.Text = "Arshu GUI"
titleLabel.Parent = mainFrame
Instance.new("UICorner", titleLabel)

-- Close Button
local closeButton = Instance.new("TextButton")
closeButton.Size = UDim2.new(0, 30, 0, 30)
closeButton.Position = UDim2.new(1, -35, 0, 5)
closeButton.BackgroundColor3 = Color3.fromRGB(200, 50, 50)
closeButton.Text = "X"
closeButton.TextColor3 = Color3.fromRGB(255, 255, 255)
closeButton.Font = Enum.Font.SourceSansBold
closeButton.TextSize = 18
closeButton.Parent = mainFrame
Instance.new("UICorner", closeButton)

closeButton.MouseButton1Click:Connect(function()
    mainFrame.Visible = false
    arrowButton.Text = "→"
end)

-- Tabs container
local tabs = Instance.new("Frame")
tabs.Size = UDim2.new(0, 100, 1, -40)
tabs.Position = UDim2.new(0, 0, 0, 40)
tabs.BackgroundTransparency = 1
tabs.Parent = mainFrame

-- Tab Button Creator
local function createTabButton(name, order, callback)
    local btn = Instance.new("TextButton")
    btn.Size = UDim2.new(1, 0, 0, 30)
    btn.Position = UDim2.new(0, 0, 0, (order - 1) * 35)
    btn.BackgroundColor3 = Color3.fromRGB(50, 50, 50)
    btn.TextColor3 = Color3.fromRGB(255, 255, 255)
    btn.Font = Enum.Font.SourceSans
    btn.TextSize = 16
    btn.Text = name
    btn.Parent = tabs
    Instance.new("UICorner", btn)

    btn.MouseButton1Click:Connect(callback)
    return btn
end

-- Content Frame
local contentFrame = Instance.new("Frame")
contentFrame.Size = UDim2.new(1, -100, 1, -40)
contentFrame.Position = UDim2.new(0, 100, 0, 40)
contentFrame.BackgroundTransparency = 1
contentFrame.Parent = mainFrame

-- Clear content
local function clearContent()
    for _, v in ipairs(contentFrame:GetChildren()) do
        if v:IsA("GuiObject") then
            v:Destroy()
        end
    end
end

-- Introduction Tab
local function showIntroduction()
    clearContent()
    local label = Instance.new("TextLabel")
    label.Size = UDim2.new(1, 0, 1, 0)
    label.Text = "yo im arshu, this is under testing if you have any bug, contact us on Instagram or telegram or discrod links are in about"
    label.TextColor3 = Color3.fromRGB(255, 255, 255)
    label.TextSize = 18
    label.Font = Enum.Font.SourceSans
    label.BackgroundTransparency = 1
    label.TextWrapped = true
    label.Parent = contentFrame
end

-- Cheats Tab
local function showCheats()
    clearContent()
    local y = 0
    local function createCheatButton(name, scriptCode)
        local btn = Instance.new("TextButton")
        btn.Size = UDim2.new(1, -20, 0, 35)
        btn.Position = UDim2.new(0, 10, 0, y)
        btn.BackgroundColor3 = Color3.fromRGB(50, 50, 50)
        btn.TextColor3 = Color3.fromRGB(255, 255, 255)
        btn.Font = Enum.Font.SourceSans
        btn.TextSize = 18
        btn.Text = name
        btn.Parent = contentFrame
        Instance.new("UICorner", btn)

        btn.MouseButton1Click:Connect(function()
            local success, err = pcall(function()
                loadstring(scriptCode)()
            end)
            if not success then
                warn("Error running " .. name .. ": " .. err)
            end
        end)
        y = y + 40
    end

    createCheatButton("ESP", [[
loadstring(game:HttpGet("https://raw.githubusercontent.com/Mautiku/ehh/main/Hight%20light%20esp%20and%20more.txt",true))()
    ]])
    createCheatButton("Aimlock", [[
loadstring(game:HttpGet("https://raw.githubusercontent.com/yzeedw/Mortalv2-main/main/UNIVERSAL%20AIMBOT%20V2"))()
  ]])
    createCheatButton("Dash", [[
loadstring(game:HttpGet('https://raw.githubusercontent.com/Mautiku/ehh/main/FE%20DASH.txt'))()
    ]])
    createCheatButton("Invisible Tool", [[
loadstring(game:HttpGet("https://raw.githubusercontent.com/Mautiku/ehh/main/invisible%20tool.txt",true))()
    ]])
end

-- About Tab
local function showAbout()
    clearContent()
    local links = {
        {name = "Discord", link = "coming soon"},
        {name = "Instagram", link = "coming soon"},
        {name = "WhatsApp", link = "coming soon"}
    }
    local y = 0
    for _, v in ipairs(links) do
        local btn = Instance.new("TextButton")
        btn.Size = UDim2.new(1, -20, 0, 35)
        btn.Position = UDim2.new(0, 10, 0, y)
        btn.BackgroundColor3 = Color3.fromRGB(50, 50, 50)
        btn.TextColor3 = Color3.fromRGB(255, 255, 255)
        btn.Font = Enum.Font.SourceSans
        btn.TextSize = 18
        btn.Text = v.name
        btn.Parent = contentFrame
        Instance.new("UICorner", btn)

        btn.MouseButton1Click:Connect(function()
            setclipboard(v.link)
        end)
        y = y + 40
    end
end

-- Create Tabs
createTabButton("Introduction", 1, showIntroduction)
createTabButton("Cheats", 2, showCheats)
createTabButton("About", 3, showAbout)

-- Arrow Toggle
arrowButton.MouseButton1Click:Connect(function()
    mainFrame.Visible = not mainFrame.Visible
    arrowButton.Text = mainFrame.Visible and "←" or "→"
    if mainFrame.Visible then
        showIntroduction()
    end
end)
